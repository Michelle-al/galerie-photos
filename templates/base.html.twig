<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="stylesheet" href="{{asset('/css/style.css')}}">
        
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
		{% block javascript %} {% endblock %}
    </head>


    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-secondary fixed-top">
			<div class="container">
				<a class="navbar-brand" href="{{path('home')}}"><img src="{{asset('images/logo-galerie.png')}}" alt="M.A. projection"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
			
				<div class="collapse navbar-collapse justify-content-center" id="navbarColor03">
					<ul class="navbar-nav m-auto">
						<li class="nav-item">
							<a class="nav-link {% if page == 'home' %}active{% endif %}" href="{{path('home')}}">ACCUEIL
							<span class="visually-hidden">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {% if page == 'galerie' %}active{% endif %}" href="{{path('galerie')}}">GALERIE</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">CONTACT</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle {% if page == 'admin' or  page == 'admin-galerie' %}active{% endif %}" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">ADMIN</a>
							<div class="dropdown-menu" data-bs-popper="none">
								<a class="dropdown-item {% if page == 'admin-galerie' %}active{% endif %}" href="{{path('admin_repertoires')}}">Gestion de la galerie</a>
								<a class="dropdown-item {% if page == 'user' %}active{% endif %}" href="{{path('admin_utilisateurs')}}">Gestion des utilisateurs</a>
							</div>
						</li>
					</ul>
					<ul class="navbar-nav flex-row mt-2 mt-md-0">
						<li class="nav-item"><a href="" class="p-3 p-md-2"><i class="fab fa-instagram fa-lg"></i></a></li>
						<li class="nav-item"><a href="" class="p-3 p-md-2 color-"><i class="far fa-user fa-lg"></i></a></li>
					</ul>
				</div>
			</div>
		</nav>
		
        {% block body %}
        
        {% endblock %}

		<footer class='bg-primary text-white container-fluid'>
			<div class="row">
				<div class="col-md-4 text-center">
					<a href="{{path('home')}}"><img src="{{asset('images/logo-galerie-white.png')}}" alt="Logo Galerie"></a>
				</div>
				<div class="col-md-4 text-secondary text-center">
					<h5 class="text-secondary">Liens utiles</h5>
				</div>
				<div class="col-md-4 text-center">

				</div>
			</div>
		</footer>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
		
		<script src="{{asset('js/index.js')}}"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
		<script src="https://kit.fontawesome.com/89e328f934.js" crossorigin="anonymous"></script>
    </body>
	
</html>
